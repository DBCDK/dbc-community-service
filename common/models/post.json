{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "LogOnDelete": true,
    "Counts": true,
    "Searchable": {
      "targetIndex": "post",
      "documentType": "post",
      "enabledProperties": [
        "title",
        "content",
        "timeCreated",
        "owner",
        "image",
        "video",
        "likes",
        "markedAsDeleted"
      ],
      "filter": {
        "include": [
          {
            "relation": "owner",
            "scope": {
              "fields": ["displayName", "id"],
              "include": {
                "image": {
                  "resolutions": "image"
                }
              }
            }
          },
          {
            "image": {
              "resolutions": "image"
            }
          },
          {
            "video": {
              "resolutions": "video"
            }
          },
          "likes"
        ],
        "where": {
          "markedAsDeleted": null
        }
      }
    }
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": false
    },
    "timeCreated": {
      "type": "date",
      "required": true
    },
    "groupDeleted": {
      "type": "boolean",
      "required": false
    },
    "markedAsDeleted": {
      "type": "boolean",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "image": {
      "type": "hasOne",
      "model": "imageCollection",
      "foreignKey": "postImageCollection"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "postid"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "postownerid"
    },
    "likes": {
      "type": "hasAndBelongsToMany",
      "model": "Like",
      "foreignKey": ""
    },
    "group": {
      "type": "belongsTo",
      "model": "Group",
      "foreignKey": "postcontainergroupid"
    },
    "video": {
      "type": "hasOne",
      "model": "videoCollection",
      "foreignKey": "postVideoCollection"
    },
    "pdf": {
      "type": "hasOne",
      "model": "file",
      "foreignKey": "postPdfAttachment"
    },
    "flags": {
      "type": "hasMany",
      "model": "Flag",
      "foreignKey": "postFlagsId"
    },
    "review": {
      "type": "belongsTo",
      "model": "review",
      "foreignKey": "attachedReviewId"
    }
  },
  "indexes": {
    "post_timecreated_idx": {"timecreated": -1},
    "post_postownerid_idx": "postownerid",
    "post_groupdeleted_idx": "groupdeleted",
    "post_groupid_idx": "groupid"
  },
  "acls": [],
  "methods": {}
}
