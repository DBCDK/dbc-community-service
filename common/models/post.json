{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": true
    },
    "timeCreated": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "postid"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "postownerid"
    }
  },
  "acls": [],
  "methods": []
}
