{
  "name": "Group",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CountsNotDeleted": true,
    "Searchable": {
      "targetIndex": "group",
      "documentType": "group",
      "suggestionProperty": "name",
      "enabledProperties": [
        "name",
        "coverImage",
        "description",
        "timeCreated",
        "posts",
        "markedAsDeleted"
      ],
      "filter": {
        "include": [
          "coverImage",
          {
            "posts": "comments"
          }
        ],
        "where": {
          "markedAsDeleted": null
        }
      },
      "triggers": [
        {
          "modelName": "ImageCollection",
          "modelFkField": "groupCoverImageCollectionId"
        },
        {
          "modelName": "Post",
          "modelFkField": "postcontainergroupid"
        }
      ]
    }
  },
  "scope": {
    "include": "campaign"
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "colour": {
      "type": "string"
    },
    "timeCreated": {
      "type": "date",
      "required": true
    },
    "timeClosed": {
      "type": "date"
    },
    "markedAsDeleted": {
      "type": "boolean",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "posts": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "groupid"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "groupownerid"
    },
    "coverImage": {
      "type": "hasOne",
      "model": "imageCollection",
      "foreignKey": "groupCoverImageCollectionId"
    },
    "flags": {
      "type": "hasMany",
      "model": "Flag",
      "foreignKey": "groupFlagsId"
    },
    "campaign": {
      "type": "belongsTo",
      "model": "Campaign",
      "foreignKey": "campaignGroupFK"
    },
    "members": {
      "type": "hasMany",
      "model": "Profile",
      "foreignKey": "groupid",
      "through": "GroupProfile"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
