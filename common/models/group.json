{
  "name": "Group",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CountsNotDeleted": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "colour": {
      "type": "string"
    },
    "timeCreated": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "posts": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "groupid"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "groupownerid"
    },
    "members": {
      "type": "hasAndBelongsToMany",
      "model": "Profile",
      "foreignKey": "profileid"
    },
    "coverImage": {
      "type": "hasOne",
      "model": "imageCollection",
      "foreignKey": "groupCoverImageCollectionId"
    },
    "flags": {
      "type": "hasMany",
      "model": "Flag",
      "foreignKey": "groupFlagsId"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
