{
  "name": "Profile",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Searchable": {
      "targetIndex": "user",
      "documentType": "user",
      "enabledProperties": [
        "email",
        "username"
      ]
    }
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "displayName": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "favoriteLibrary": {
      "type": "object"
    },
    "description": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "created": {
      "type": "date"
    },
    "lastUpdated": {
      "type": "date"
    },
    "hasFilledInProfile": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "likes": {
      "type": "hasMany",
      "model": "Like",
      "foreignKey": ""
    },
    "groups": {
      "type": "hasAndBelongsToMany",
      "model": "Group",
      "foreignKey": ""
    },
    "posts": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "postid"
    },
    "comments": {
      "type": "hasAndBelongsToMany",
      "model": "Comment",
      "foreignKey": ""
    },
    "ownedGroups": {
      "type": "hasAndBelongsToMany",
      "model": "Profile",
      "foreignKey": ""
    },
    "image": {
      "type": "hasOne",
      "model": "imageCollection",
      "foreignKey": "profileImageCollection"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "profileId",
      "options": {
        "disableInclude": true
      }
    },
    "communityRoles": {
      "type": "hasAndBelongsToMany",
      "model": "CommunityRole",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "unilogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "checkIfUserExists"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "logout"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
