{
  "name": "Comment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Counts": true,
    "Searchable": {
      "targetIndex": "comment",
      "documentType": "comment",
      "enabledProperties": [
        "content",
        "owner",
        "image",
        "video",
        "timeCreated"
      ],
      "filter": {
        "where": {
          "timeDeleted": null
        },
        "include": [
          {
            "relation": "owner",
            "scope": {
              "fields": [
                "displayName",
                "id"
              ],
              "include": {
                "image": {
                  "resolutions": "image"
                }
              }
            }
          },
          {
            "image": {
              "resolutions": "image"
            }
          },
          {
            "video": {
              "resolutions": "video"
            }
          }
        ]
      }
    }
  },
  "scope": {
    "where": {
      "timeDeleted": null
    }
  },
  "properties": {
    "content": {
      "type": "string",
      "required": true
    },
    "timeCreated": {
      "type": "date",
      "required": true
    },
    "timeDeleted": {
      "type": "date",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "image": {
      "type": "hasOne",
      "model": "imageCollection",
      "foreignKey": "commentImageCollection"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "commentownerid"
    },
    "post": {
      "type": "belongsTo",
      "model": "Post",
      "foreignKey": "commentcontainerpostid"
    },
    "flags": {
      "type": "hasMany",
      "model": "Flag",
      "foreignKey": "commentFlagsId"
    },
    "video": {
      "type": "hasOne",
      "model": "videoCollection",
      "foreignKey": "commentVideoCollection"
    },
    "review": {
      "type": "belongsTo",
      "model": "review",
      "foreignKey": "attachedReviewId"
    }
  },
  "acls": [],
  "methods": {}
}
